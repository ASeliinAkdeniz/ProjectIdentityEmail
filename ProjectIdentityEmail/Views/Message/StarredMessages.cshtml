@model List<ProjectIdentityEmail.Entities.Message>
@{
    ViewData["Title"] = "Yıldızlı Mesajlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* --- PASTEL TEMA AYARLARI --- */
    :root {
        --primary-soft: #8e94f2;
        --primary-dark: #6c72e2;
        --text-dark: #2d3748;
        --text-muted: #a0aec0;
        --bg-card: #ffffff;
        --bg-body: #f3f4f8;
        --border-color: #f1f5f9;
        --hover-row: #f8fafc;
        --gold-star: #fbbf24;
    }

    /* Kapsayıcı Kart */
    .starred-card {
        background-color: var(--bg-card);
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.02);
        padding: 0;
        overflow: hidden;
        min-height: 80vh;
    }

    /* --- TABLO TASARIMI --- */
    .table-responsive {
        width: 100%;
        border-radius: 20px;
    }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 0;
    }

        /* Başlıklar */
        .table-custom thead th {
            background-color: #f8fafc;
            color: var(--text-muted);
            font-weight: 700;
            padding: 20px 25px;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 1px;
            border-bottom: 1px solid var(--border-color);
            border-top: none;
        }

        /* Satırlar */
        .table-custom tbody tr {
            background-color: #ffffff;
            border-bottom: 1px solid var(--border-color);
            transition: all 0.3s ease; /* Silinme efekti için */
        }

            .table-custom tbody tr:hover {
                background-color: var(--hover-row);
                cursor: pointer;
            }

            .table-custom tbody tr td {
                padding: 18px 25px;
                vertical-align: middle;
                border: none;
                color: var(--text-dark);
            }

    /* --- İÇERİK STİLLERİ --- */
    .subject-text {
        font-weight: 700;
        font-size: 1rem;
        color: var(--text-dark);
        display: block;
    }

    .person-text {
        font-weight: 600;
        color: var(--text-dark);
    }

    /* Yıldız İkonu */
    .star-icon {
        color: var(--gold-star);
        font-size: 1.2rem;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .star-icon:hover {
            transform: scale(1.3);
        }

    /* Tür Badge (Gelen/Giden) */
    .badge-type {
        font-size: 0.7rem;
        padding: 5px 12px;
        border-radius: 6px;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .badge-incoming {
        background-color: #def7ec;
        color: #03543f;
    }
    /* Pastel Yeşil */
    .badge-outgoing {
        background-color: #e1effe;
        color: #1e429f;
    }
    /* Pastel Mavi */

    /* İşlem Butonları */
    .btn-action {
        width: 35px;
        height: 35px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #e2e8f0;
        color: #a0aec0;
        background: white;
        transition: 0.2s;
    }

        .btn-action:hover {
            background: var(--primary-soft);
            color: white;
            border-color: var(--primary-soft);
            box-shadow: 0 4px 10px rgba(142, 148, 242, 0.3);
        }

    /* Modal Tasarımı */
    .modal-content-pastel {
        background-color: #fff;
        border-radius: 20px;
        border: none;
        box-shadow: 0 20px 60px rgba(0,0,0,0.1);
    }

    .modal-header, .modal-footer {
        border-color: #f1f5f9;
        padding: 20px 30px;
    }

    .modal-title {
        color: var(--text-dark);
        font-weight: 700;
    }

    .btn-close {
        filter: none;
    }

    .modal-user-badge {
        background: #fffbeb;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        color: #b45309;
        font-weight: 500;
    }
</style>
<div class="container-fluid p-0">
    <div class="starred-card">

        <div class="d-flex justify-content-between align-items-center p-4 border-bottom" style="border-color: var(--border-color) !important;">
            <div class="d-flex align-items-center">
                <div style="background: linear-gradient(135deg, #fcd34d, #fbbf24); padding: 12px; border-radius: 12px; margin-right: 15px; box-shadow: 0 4px 10px rgba(251, 191, 36, 0.3);">
                    <i class="fas fa-star text-white fa-lg"></i>
                </div>
                <div>
                    <h4 class="fw-bold mb-0" style="color:var(--text-dark);">Yıldızlı Mailler</h4>
                    <small class="text-muted">Önemli olarak işaretlediğiniz tüm mailler</small>
                </div>
            </div>
        </div>

        @if (Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-custom">
                    <thead>
                        <tr>
                            <th style="width: 50px;" class="text-center">#</th>
                            <th style="width: 100px;">TÜR</th>
                            <th style="width: 25%;">KİŞİ</th>
                            <th style="width: 40%;">KONU VE İÇERİK</th>
                            <th>TARİH</th>
                            <th class="text-end pe-5">İŞLEM</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            // Gelen mi Giden mi kontrolü
                            bool isIncoming = item.ReceiverEmail == User.Identity.Name || item.SenderEmail != User.Identity.Name;
                            string typeBadge = isIncoming ? "GELEN" : "GİDEN";
                            string badgeClass = isIncoming ? "badge-incoming" : "badge-outgoing";
                            string person = isIncoming ? item.SenderEmail : item.ReceiverEmail;

                            // GÜVENLİ METİN KESME İŞLEMİ (Önce HTML temizlenir, SONRA temiz metnin uzunluğuna bakılır)
                            string plainText = System.Text.RegularExpressions.Regex.Replace(item.MessageDetail ?? "", "<.*?>", String.Empty);
                            string previewText = plainText.Length > 60 ? plainText.Substring(0, 60) + "..." : plainText;

                            <tr id="row_@item.MessageId">
                                <td class="text-center">
                                    <i class="fas fa-star star-icon active" style="color:#fbbf24; cursor:pointer;" onclick="removeStar(@item.MessageId)" title="Yıldızı Kaldır"></i>
                                </td>

                                <td>
                                    <span class="badge @badgeClass badge-type">@typeBadge</span>
                                </td>

                                <td>
                                    <span class="person-text">@person</span>
                                </td>

                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="subject-text fw-bold" style="color:var(--text-dark);">
                                            @item.Subject
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <i class="fas fa-paperclip ms-2 text-warning"></i>
                                            }
                                        </span>
                                        <span class="small text-muted mt-1">
                                            @previewText
                                        </span>
                                    </div>
                                </td>

                                <td style="color: #a0aec0; font-size: 0.85rem; font-weight:500;">
                                    @item.SendDate.ToString("dd MMM yyyy, HH:mm")
                                </td>

                                <td class="text-end pe-5">
                                    <div id="hidden-content-@item.MessageId" class="d-none">
                                        @Html.Raw(item.MessageDetail)
                                    </div>

                                    <button type="button" class="btn-action view-btn"
                                            style="width: 35px; height: 35px; border-radius: 10px; border: 1px solid #e2e8f0; color: #a0aec0; background: white; transition: 0.2s;"
                                            data-bs-toggle="modal"
                                            data-bs-target="#messageModal"
                                            data-id="@item.MessageId"
                                            data-subject="@item.Subject"
                                            data-person="@person"
                                            data-date="@item.SendDate.ToString("dd MMMM yyyy HH:mm")"
                                            data-image="@item.ImageUrl">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 mt-5">
                <div style="background:#fffbeb; width:100px; height:100px; border-radius:50%; display:flex; align-items:center; justify-content:center; margin: 0 auto 20px auto;">
                    <i class="far fa-star fa-3x text-warning opacity-50"></i>
                </div>
                <h4 class="fw-bold" style="color:var(--text-dark)">Hiç yıldızlı mesajınız yok.</h4>
                <p class="text-muted">Önemli mesajları yıldızlayarak buraya ekleyebilirsiniz.</p>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="messageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content modal-content-pastel" style="border-radius: 20px; border: none; box-shadow: 0 20px 60px rgba(0,0,0,0.1);">
            <div class="modal-header" style="border-color: #f1f5f9; padding: 20px 30px;">
                <h5 class="modal-title fw-bold" style="color:var(--text-dark);">Mesaj Detayı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h4 class="fw-bold mb-2" id="modalSubject" style="color:var(--text-dark)">...</h4>
                        <span class="modal-user-badge" style="background: #f7fafc; padding: 5px 15px; border-radius: 20px; font-size: 0.9rem; color: var(--primary-dark); font-weight: 500;">
                            <i class="fas fa-user me-2"></i> Kişi: <span id="modalPerson">...</span>
                        </span>
                    </div>
                    <span class="badge bg-light text-muted border px-3 py-2" id="modalDate">...</span>
                </div>

                <div style="background: #f8fafc; padding: 25px; border-radius: 15px; color: #4a5568; line-height: 1.6;" id="modalContent"></div>

                <div id="modalImageBox" class="d-none mt-3">
                    <span class="small fw-bold text-muted d-block mb-2">EKLİ GÖRSEL</span>
                    <img src="" id="modalImage" class="img-fluid rounded-3 border shadow-sm" style="max-height: 300px;">
                </div>
            </div>
            <div class="modal-footer" style="border-color: #f1f5f9; padding: 20px 30px;">
                <button type="button" class="btn btn-light fw-bold text-muted" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Yıldızı Kaldırma Fonksiyonu
    function removeStar(id) {
        fetch('/Message/ToggleStar/' + id)
            .then(response => {
                if(response.ok) {
                    var row = document.getElementById('row_' + id);
                    row.style.transition = "opacity 0.3s ease";
                    row.style.opacity = '0'; // Görünmez yap
                    setTimeout(function() {
                        row.remove(); // DOM'dan sil
                        var tbody = document.querySelector('.table-custom tbody');
                        if (tbody && tbody.children.length === 0) {
                            location.reload(); // Liste boşaldıysa sayfayı yenile ki boş mesajı gelsin
                        }
                    }, 300);
                }
            });
    }

    // Modal Doldurma ve Gizli İçeriği Çekme
    var messageModal = document.getElementById('messageModal');
    messageModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var messageId = button.getAttribute('data-id');

        document.getElementById('modalSubject').textContent = button.getAttribute('data-subject');
        document.getElementById('modalPerson').textContent = button.getAttribute('data-person');
        document.getElementById('modalDate').textContent = button.getAttribute('data-date');

        // İçeriği GİZLİ DİVDEN GÜVENLE çekiyoruz (HTML Kırılmalarını Önler)
        var hiddenContent = document.getElementById('hidden-content-' + messageId);
        if(hiddenContent) {
            document.getElementById('modalContent').innerHTML = hiddenContent.innerHTML;
        }

        var image = button.getAttribute('data-image');
        var imgBox = document.getElementById('modalImageBox');
        var imgEl = document.getElementById('modalImage');

        if (image && image.trim() !== '') {
            imgEl.src = image;
            imgBox.classList.remove('d-none');
        } else {
            imgBox.classList.add('d-none');
            imgEl.src = '';
        }
    });
</script>

@model List<ProjectIdentityEmail.Entities.Message>
@{
    ViewData["Title"] = "Gelen Kutusu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* --- PASTEL TEMA AYARLARI --- */
    :root {
        --primary-soft: #8e94f2;
        --primary-dark: #6c72e2;
        --text-dark: #2d3748;
        --text-muted: #a0aec0;
        --bg-card: #ffffff;
        --bg-body: #f3f4f8;
        --border-color: #f1f5f9;
        --hover-row: #f8fafc;
        --gold-star: #fbbf24;
    }

    /* Kapsayıcı Kart */
    .inbox-card {
        background-color: var(--bg-card);
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.02);
        padding: 0;
        overflow: hidden;
        min-height: 80vh;
    }

    /* --- TABLO TASARIMI --- */
    .table-responsive {
        width: 100%;
        border-radius: 20px;
    }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 0;
    }

        .table-custom thead th {
            background-color: #f8fafc;
            color: var(--text-muted);
            font-weight: 700;
            padding: 20px 25px;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 1px;
            border-bottom: 1px solid var(--border-color);
            border-top: none;
        }

        .table-custom tbody tr {
            background-color: #ffffff;
            border-bottom: 1px solid var(--border-color);
            transition: all 0.2s ease-in-out;
        }

            .table-custom tbody tr:hover {
                background-color: var(--hover-row);
                cursor: pointer;
            }

            .table-custom tbody tr td {
                padding: 18px 25px;
                vertical-align: middle;
                border: none;
                color: var(--text-dark);
            }

    /* --- OKUNDU / OKUNMADI DURUMLARI --- */
    .unread-row .subject-title {
        color: var(--text-dark);
        font-weight: 700 !important;
        font-size: 1rem;
    }

    .unread-row .sender-text {
        color: var(--text-dark);
        font-weight: 600 !important;
    }

    .unread-icon {
        font-size: 1.2rem;
        color: var(--primary-soft);
        background: rgba(142, 148, 242, 0.15);
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
    }

    .read-row .subject-title {
        color: #718096;
        font-weight: 400 !important;
    }

    .read-row .sender-text {
        color: #718096;
        font-weight: 400 !important;
    }

    .read-icon {
        font-size: 1.2rem;
        color: #cbd5e0;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
    }

    .message-preview {
        font-size: 0.85rem;
        color: #a0aec0;
        display: block;
        margin-top: 4px;
    }

    /* Yıldız ve Butonlar */
    .star-btn {
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 5px;
        transition: transform 0.2s;
    }

        .star-btn:hover {
            transform: scale(1.2);
        }

    .star-icon {
        color: #cbd5e0;
        font-size: 1.2rem;
        transition: 0.2s;
    }

        .star-icon.active {
            color: var(--gold-star) !important;
        }

    .btn-action {
        width: 35px;
        height: 35px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #e2e8f0;
        color: #a0aec0;
        background: white;
        transition: 0.2s;
    }

        .btn-action:hover {
            background: var(--primary-soft);
            color: white;
            border-color: var(--primary-soft);
            box-shadow: 0 4px 10px rgba(142, 148, 242, 0.3);
        }

    .badge-new {
        background-color: #ebf8ff;
        color: #3182ce;
        font-size: 0.65rem;
        padding: 4px 8px;
        border-radius: 6px;
        font-weight: 700;
        margin-right: 8px;
    }

    /* Modal */
    .modal-content-pastel {
        background-color: #fff;
        border-radius: 20px;
        border: none;
        box-shadow: 0 20px 60px rgba(0,0,0,0.1);
    }

    .modal-header, .modal-footer {
        border-color: #f1f5f9;
        padding: 20px 30px;
    }

    .modal-title {
        color: var(--text-dark);
        font-weight: 700;
    }

    .btn-close {
        filter: none;
    }

    .modal-sender-badge {
        background: #f7fafc;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        color: var(--primary-dark);
        font-weight: 500;
    }
</style>

<div class="container-fluid p-0">
    <div class="inbox-card">

        <div class="d-flex justify-content-between align-items-center p-4 border-bottom" style="border-color: var(--border-color) !important;">
            <div class="d-flex align-items-center">
                <div style="background-color: var(--primary-soft); padding: 12px; border-radius: 12px; margin-right: 15px; color:white;">
                    <i class="fas fa-inbox fa-lg"></i>
                </div>
                <div>
                    <h4 class="fw-bold mb-0" style="color:var(--text-dark);">Gelen Kutusu</h4>
                    <small class="text-muted">Tüm mesajlarınız burada listelenir</small>
                </div>
            </div>
        </div>

        @if (Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-custom">
                    <thead>
                        <tr>
                            <th style="width: 50px;" class="text-center"><i class="fas fa-star text-warning"></i></th>
                            <th style="width: 70px;" class="text-center">DURUM</th>
                            <th style="width: 45%;">KONU VE İÇERİK</th>
                            <th style="width: 25%;">GÖNDEREN</th>
                            <th>TARİH</th>
                            <th class="text-end pe-5">İŞLEMLER</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string rowStatusClass = item.IsStatus ? "read-row" : "unread-row";
                            string iconClass = item.IsStatus ? "read-icon fa-envelope-open" : "unread-icon fa-envelope";
                            string iconTitle = item.IsStatus ? "Okundu" : "Okunmadı";

                            // GÜVENLİ METİN KISALTMA
                            string plainText = System.Text.RegularExpressions.Regex.Replace(item.MessageDetail ?? "", "<.*?>", String.Empty);
                            string previewText = plainText.Length > 60 ? plainText.Substring(0, 60) + "..." : plainText;

                            <tr class="@rowStatusClass">
                                <td class="text-center">
                                    <button class="star-btn" onclick="toggleStar(this, @item.MessageId)">
                                        <i class="fas fa-star star-icon @(item.IsStarred ? "active" : "")"></i>
                                    </button>
                                </td>

                                <td class="text-center">
                                    <div class="@(item.IsStatus ? "read-icon" : "unread-icon") mx-auto">
                                        <i class="fas @(item.IsStatus ? "fa-envelope-open" : "fa-envelope")"></i>
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="subject-title">
                                            @if (!item.IsStatus)
                                            {
                                                <span class="badge-new">YENİ</span>
                                            }
                                            @item.Subject
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <i class="fas fa-paperclip ms-2 text-warning" style="font-size: 0.9rem;"></i>
                                            }
                                        </span>
                                        <span class="message-preview">
                                            @previewText
                                        </span>
                                    </div>
                                </td>

                                <td><span class="sender-text">@item.SenderEmail</span></td>

                                <td style="color: #a0aec0; font-size: 0.85rem; font-weight:500;">@item.SendDate.ToString("dd MMM, HH:mm")</td>

                                <td class="text-end pe-5">
                                    <div id="hidden-content-@item.MessageId" class="d-none">
                                        @Html.Raw(item.MessageDetail)
                                    </div>

                                    <button type="button" class="btn-action view-btn me-2"
                                            data-bs-toggle="modal"
                                            data-bs-target="#inboxModal"
                                            data-id="@item.MessageId"
                                            data-subject="@item.Subject"
                                            data-sender="@item.SenderEmail"
                                            data-date="@item.SendDate.ToString("dd MMMM yyyy HH:mm")"
                                            data-image="@item.ImageUrl"
                                            data-starred="@item.IsStarred">
                                        <i class="fas fa-eye"></i>
                                    </button>

                                    <a href="/Message/DeleteInboxMessage/@item.MessageId" class="btn-action text-decoration-none">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 mt-5">
                <div style="background:#f8fafc; width:100px; height:100px; border-radius:50%; display:flex; align-items:center; justify-content:center; margin: 0 auto 20px auto;">
                    <i class="fas fa-inbox fa-3x text-muted opacity-50"></i>
                </div>
                <h5 class="fw-bold" style="color:var(--text-dark)">Gelen kutusu boş.</h5>
                <p class="text-muted">Şu anda görüntülenecek mesaj yok.</p>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="inboxModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content modal-content-pastel">
            <div class="modal-header">
                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-sm btn-light border" id="modalStarBtn"><i class="far fa-star text-warning"></i></button>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-light border dropdown-toggle fw-bold text-muted" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-folder-plus me-1"></i> Kaydet
                        </button>
                        <ul class="dropdown-menu shadow border-0">
                            <li><a class="dropdown-item" id="btnSetWork" href="#"><i class="fas fa-briefcase text-primary me-2"></i>İş</a></li>
                            <li><a class="dropdown-item" id="btnSetFamily" href="#"><i class="fas fa-home text-warning me-2"></i>Aile</a></li>
                            <li><a class="dropdown-item" id="btnSetFriend" href="#"><i class="fas fa-user-friends text-info me-2"></i>Arkadaşlar</a></li>
                        </ul>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h4 class="fw-bold mb-2" id="modalSubject" style="color:var(--text-dark)">...</h4>
                        <span class="modal-sender-badge">
                            <i class="fas fa-user me-2"></i> <span id="modalSender">...</span>
                        </span>
                    </div>
                    <span class="badge bg-light text-muted border px-3 py-2" id="modalDate">...</span>
                </div>

                <div style="background: #f8fafc; padding: 25px; border-radius: 15px; color: #4a5568; line-height: 1.6;" id="modalContent"></div>

                <div id="modalImageBox" class="d-none mt-3">
                    <img src="" id="modalImage" class="img-fluid rounded-3 border shadow-sm" style="max-height: 300px;">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light fw-bold text-muted" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script>
    // --- 1. YILDIZ TIKLAMA FONKSİYONU ---
    function toggleStar(btn, id) {
        var icon = btn.querySelector('i');
        if (icon.classList.contains('active')) {
            icon.classList.remove('active');
            icon.style.color = "#cbd5e0";
        } else {
            icon.classList.add('active');
            icon.style.color = "#fbbf24";
        }
        fetch('/Message/ToggleStar/' + id);
    }

    // --- 2. MODAL İŞLEMLERİ VE KLASÖR LİNKLERİ ---
    document.addEventListener("DOMContentLoaded", function() {
        var inboxModal = document.getElementById('inboxModal');

        inboxModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var messageId = button.getAttribute('data-id');

            // Modal içerik atamaları
            document.getElementById('modalSubject').textContent = button.getAttribute('data-subject');
            document.getElementById('modalSender').textContent = button.getAttribute('data-sender');
            document.getElementById('modalDate').textContent = button.getAttribute('data-date');

            // İÇERİĞİ GİZLİ DİVDEN GÜVENLE ALIYORUZ
            var hiddenContent = document.getElementById('hidden-content-' + messageId);
            if(hiddenContent) {
                document.getElementById('modalContent').innerHTML = hiddenContent.innerHTML;
            }

            // KLASÖR LİNKLERİNİN DİNAMİK GÜNCELLENMESİ
            document.getElementById('btnSetWork').href = "/Message/AssignFolder?id=" + messageId + "&folder=Is";
            document.getElementById('btnSetFamily').href = "/Message/AssignFolder?id=" + messageId + "&folder=Aile";
            document.getElementById('btnSetFriend').href = "/Message/AssignFolder?id=" + messageId + "&folder=Arkadaslar";

            // Resim Kontrolü
            var image = button.getAttribute('data-image');
            var imgBox = document.getElementById('modalImageBox');
            var imgEl = document.getElementById('modalImage');

            if (image && image.trim() !== '') {
                imgEl.src = image;
                imgBox.classList.remove('d-none');
            } else {
                imgBox.classList.add('d-none');
                imgEl.src = '';
            }

            // Otomatik Okundu İşaretle
            fetch('/Message/MarkAsRead/' + messageId);

            // Modal içindeki yıldızın durumu
            var isStarred = button.getAttribute('data-starred') === 'True';
            var starBtnIcon = document.querySelector('#modalStarBtn i');
            if(isStarred) {
                starBtnIcon.classList.remove('far');
                starBtnIcon.classList.add('fas');
                starBtnIcon.style.color = '#fbbf24';
            } else {
                starBtnIcon.classList.remove('fas');
                starBtnIcon.classList.add('far');
                starBtnIcon.style.color = '';
            }
        });
    });
</script>
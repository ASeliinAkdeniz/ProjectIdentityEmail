@model ProjectIdentityEmail.Entities.Message
@{
    ViewData["Title"] = "Yeni Mesaj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">

<style>
    /* --- PASTEL TEMA AYARLARI --- */
    :root {
        --primary-soft: #8e94f2;
        --primary-dark: #6c72e2;
        --text-dark: #2d3748;
        --text-muted: #a0aec0;
        --bg-card: #ffffff;
        --bg-body: #f3f4f8;
        --input-bg: #f8fafc;
        --border-color: #e2e8f0;
    }

    /* Kapsayıcı Kart */
    .compose-card {
        background-color: var(--bg-card);
        border: none;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.02);
        overflow: hidden;
    }

    /* Input Stilleri (Modern & Soft) */
    .form-control-pastel {
        background-color: var(--input-bg);
        border: 1px solid var(--border-color);
        color: var(--text-dark);
        border-radius: 12px;
        padding: 12px 15px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

        .form-control-pastel:focus {
            background-color: #fff;
            border-color: var(--primary-soft);
            box-shadow: 0 0 0 4px rgba(142, 148, 242, 0.1);
            color: var(--text-dark);
        }

    .form-label {
        color: var(--text-dark);
        font-weight: 600;
        font-size: 0.85rem;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Butonlar */
    .btn-send {
        background-color: var(--primary-soft);
        border: none;
        color: white;
        font-weight: 600;
        transition: 0.3s;
        border-radius: 12px;
        padding: 12px 30px;
        box-shadow: 0 4px 15px rgba(142, 148, 242, 0.3);
    }

        .btn-send:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            color: white;
        }

    .btn-cancel {
        background-color: #edf2f7;
        color: var(--text-dark);
        border: none;
        border-radius: 12px;
        padding: 12px 25px;
        font-weight: 600;
        transition: 0.2s;
    }

        .btn-cancel:hover {
            background-color: #e2e8f0;
        }

    /* --- SUMMERNOTE CLEAN THEME UYARLAMASI --- */
    .note-editor.note-frame {
        border: 1px solid var(--border-color);
        border-radius: 12px;
        overflow: hidden;
    }

    .note-editor .note-toolbar {
        background-color: #f8fafc;
        border-bottom: 1px solid var(--border-color);
    }

    .note-editor .note-statusbar {
        background-color: #f8fafc;
        border-top: 1px solid var(--border-color);
    }

    .note-btn {
        background: white;
        border: 1px solid #e2e8f0;
        color: var(--text-dark);
        border-radius: 6px;
    }

        .note-btn.active {
            background-color: var(--primary-soft);
            color: white;
            border-color: var(--primary-soft);
        }

    /* Dosya Yükleme Inputu */
    input[type="file"]::file-selector-button {
        background-color: #edf2f7;
        border: none;
        color: var(--text-dark);
        padding: 8px 15px;
        margin-right: 15px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        transition: 0.2s;
    }

        input[type="file"]::file-selector-button:hover {
            background-color: #e2e8f0;
        }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card compose-card">

                <div class="card-header bg-white border-0 pt-4 px-4 pb-0">
                    <div class="d-flex align-items-center mb-4 border-bottom pb-3" style="border-color: var(--border-color) !important;">
                        <div style="background-color: var(--primary-soft); padding: 12px; border-radius: 12px; margin-right: 15px; color:white;">
                            <i class="fas fa-pen-nib fa-lg"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold mb-0" style="color:var(--text-dark)">Yeni Mesaj</h4>
                            <small class="text-muted">Mesajınızı oluşturun ve eklerinizi yönetin.</small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 pt-0">
                    <form method="post" enctype="multipart/form-data">

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label">ALICI EMAIL</label>
                                <input type="email" asp-for="ReceiverEmail" class="form-control form-control-pastel" placeholder="ornek@email.com" required />
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label">KONU</label>
                                <input type="text" asp-for="Subject" class="form-control form-control-pastel" placeholder="Mesaj konusu..." required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">DOSYA EKLE (Opsiyonel)</label>
                            <input type="file" name="ImageFile" class="form-control form-control-pastel" accept="image/*" />
                            <small class="text-muted mt-1 d-block" style="font-size: 12px;">
                                <i class="fas fa-info-circle me-1"></i> Sadece .jpg, .jpeg, .png formatları desteklenir.
                            </small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">İÇERİK</label>
                            <textarea id="summernote" asp-for="MessageDetail"></textarea>
                        </div>

                        <div class="d-flex justify-content-end gap-2 pt-3 border-top" style="border-color: var(--border-color) !important;">
                            <a href="/Message/Inbox" class="btn btn-cancel text-decoration-none">İptal</a>
                            <button type="submit" class="btn btn-send">
                                <i class="fas fa-paper-plane me-2"></i> GÖNDER
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<script>
    $('#summernote').summernote({
        placeholder: 'Mesajınızı buraya yazınız...',
        tabsize: 2,
        height: 300, // Yüksekliği biraz artırdım
        toolbar: [
          ['style', ['style']],
          ['font', ['bold', 'underline', 'clear']],
          ['color', ['color']],
          ['para', ['ul', 'ol', 'paragraph']],
          ['table', ['table']],
          ['insert', ['link']], // Resim yüklemeyi kaldırdım, dosya inputu var
          ['view', ['fullscreen', 'codeview', 'help']]
        ],
        // Summernote'un beyaz temaya uyumlu olması için arka plan ayarı
        callbacks: {
            onInit: function() {
                $('.note-editable').css('background-color', '#fff').css('color', '#333');
            }
        }
    });
</script>
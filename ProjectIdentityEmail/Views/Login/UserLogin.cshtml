@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap - Pastel Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-body: #f0f4ff; /* Çok açık mavi tonu */
            --primary-soft: #8e94f2; /* Ana Pastel Mor */
            --primary-dark: #6c72e2;
            --text-dark: #2d3748;
            --text-muted: #a0aec0;
            --input-bg: #f8fafc;
            --input-border: #e2e8f0;
        }

        body {
            background-color: var(--bg-body);
            font-family: 'Inter', sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        /* Arka Plan Süslemesi (Opsiyonel: Modernlik katar) */
        .bg-shape {
            position: absolute;
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(142,148,242,0.15) 0%, rgba(240,244,255,0) 70%);
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: -1;
        }

        /* Giriş Kartı */
        .login-card {
            background: #ffffff;
            padding: 50px 40px;
            border-radius: 24px;
            box-shadow: 0 20px 50px rgba(142, 148, 242, 0.1); /* Yumuşak mor gölge */
            width: 100%;
            max-width: 450px;
            text-align: center;
            border: 1px solid #fff;
        }

        /* Logo Alanı */
        .logo-area {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 12px;
            margin-bottom: 10px;
        }

        .logo-icon {
            width: 45px;
            height: 45px;
            background-color: var(--primary-soft);
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 20px;
            box-shadow: 0 8px 20px rgba(142, 148, 242, 0.3);
        }

        .logo-text {
            font-family: 'Poppins', sans-serif;
            font-size: 24px;
            font-weight: 700;
            color: var(--text-dark);
            letter-spacing: -0.5px;
        }

        .welcome-text {
            color: var(--text-muted);
            font-size: 14px;
            margin-bottom: 40px;
        }

        /* Form Elemanları */
        .form-group {
            text-align: left;
            margin-bottom: 20px;
        }

        .form-label {
            font-size: 13px;
            font-weight: 600;
            color: #4a5568;
            margin-bottom: 8px;
            display: block;
        }

        .form-control {
            background-color: var(--input-bg);
            border: 2px solid var(--input-border);
            border-radius: 12px;
            height: 50px;
            padding-left: 20px;
            font-size: 15px;
            color: var(--text-dark);
            transition: all 0.3s ease;
        }

            .form-control:focus {
                background-color: #fff;
                border-color: var(--primary-soft);
                box-shadow: 0 0 0 4px rgba(142, 148, 242, 0.1);
                color: var(--text-dark);
            }

            .form-control::placeholder {
                color: #cbd5e0;
            }

        /* Giriş Butonu */
        .btn-login {
            background-color: var(--primary-soft);
            color: white;
            border: none;
            width: 100%;
            height: 52px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 16px;
            margin-top: 20px;
            box-shadow: 0 10px 20px rgba(142, 148, 242, 0.25);
            transition: all 0.3s;
        }

            .btn-login:hover {
                background-color: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 15px 30px rgba(142, 148, 242, 0.35);
                color: white;
            }

        /* Kayıt Linki */
        .register-area {
            margin-top: 30px;
            font-size: 14px;
            color: var(--text-muted);
        }

        .register-link {
            color: var(--primary-dark);
            font-weight: 600;
            text-decoration: none;
            transition: 0.2s;
        }

            .register-link:hover {
                text-decoration: underline;
                color: var(--primary-soft);
            }
    </style>
</head>
<body>

    <div class="bg-shape"></div>

    <div class="login-card">

        <div class="logo-area">
            <div class="logo-icon">
                <i class="fas fa-paper-plane"></i>
            </div>
            <span class="logo-text">PastelMail</span>
        </div>
        <p class="welcome-text">Hesabınıza giriş yaparak devam edin.</p>

        <form method="post">

            <div class="form-group">
                <label class="form-label">KULLANICI ADI</label>
                <input type="text" class="form-control" name="UserName" placeholder="kullaniciadi" required autocomplete="off">
            </div>

            <div class="form-group">
                <label class="form-label">ŞİFRE</label>
                <input type="password" class="form-control" name="Password" placeholder="••••••••" required>
            </div>

            <button type="submit" class="btn btn-login">
                Giriş Yap
            </button>

        </form>

        <div class="register-area">
            Hesabınız yok mu?
            <a href="/Register/CreateUser" class="register-link">Hemen Oluştur</a>
        </div>

    </div>

</body>
</html>
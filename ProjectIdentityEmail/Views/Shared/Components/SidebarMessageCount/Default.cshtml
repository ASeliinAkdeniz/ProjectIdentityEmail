@model SidebarViewModel
@* Not: Eğer SidebarViewModel bulunamadı hatası alırsan, modelin bulunduğu namespace'i buraya eklemelisin. Örn: @model ProjectIdentityEmail.ViewComponents.SidebarViewModel *@

<div class="sidebar">
    <div class="logo-area">
        <div style="width:35px; height:35px; background:var(--primary-soft); border-radius:10px; display:flex; align-items:center; justify-content:center; color:white;">
            <i class="fa-solid fa-paper-plane"></i>
        </div>
        <span class="logo-text">PastelMail</span>
    </div>

    <a href="/Message/SendMessage" class="btn-compose text-decoration-none">
        <i class="fa fa-pen"></i> Yeni Mesaj
    </a>

    <div class="nav flex-column">

        <a href="/Dashboard/Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")">
            <i class="fa-solid fa-chart-pie"></i> Dashboard
        </a>
        <a href="/Message/Inbox" class="nav-link">
            <i class="fa-solid fa-inbox"></i> Gelen Kutusu
            <span class="badge-soft active">@Model.Inbox</span>
        </a>

        <a href="/Message/SendBox" class="nav-link">
            <i class="fa-regular fa-paper-plane"></i> Giden Kutusu
            <span class="badge-soft">@Model.Sendbox</span>
        </a>

        <a href="/Message/StarredMessages" class="nav-link">
            <i class="fa-regular fa-star"></i> Yıldızlı
            <span class="badge-soft">@Model.Starred</span>
        </a>

        <a href="/Message/Trash" class="nav-link">
            <i class="fa-regular fa-trash-can"></i> Çöp Kutusu
            <span class="badge-soft">@Model.Trash</span>
        </a>


        <div class="menu-label">Kategoriler</div>

        <a href="/Message/WorkMessages" class="nav-link">
            <i class="fa-solid fa-briefcase text-primary opacity-75"></i> İş
            <span class="badge-soft">@Model.Work</span>
        </a>

        <a href="/Message/FamilyMessages" class="nav-link">
            <i class="fa-solid fa-house text-warning opacity-75"></i> Aile
            <span class="badge-soft">@Model.Family</span>
        </a>

        <a href="/Message/FriendMessages" class="nav-link">
            <i class="fa-solid fa-user-group text-success opacity-75"></i> Arkadaşlar
            <span class="badge-soft">@Model.Friends</span>
        </a>

        <div class="mt-5 px-4">
            <a href="/Login/UserLogin" class="d-flex align-items-center text-muted text-decoration-none small hover-red">
                <i class="fa-solid fa-power-off me-2"></i> Çıkış Yap
            </a>
        </div>

    </div>
</div>